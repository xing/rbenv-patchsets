build_package_patch_ruby_railsexpress() {
  fetch_git rvm-patchsets git://github.com/skaes/rvm-patchsets.git master
  while IFS= read -r patch; do
    patch -p1 < "rvm-patchsets/patches/ruby/2.5.5/$patch"
  done < "rvm-patchsets/patchsets/ruby/2.5.5/railsexpress"
}

install_package "openssl-1.1.1l" "https://www.openssl.org/source/openssl-1.1.1l.tar.gz#0b7a3e5e59c34827fe0c3a74b7ec8baef302b98fa80088d7f9153aa16fa76bd1" mac_openssl --if has_broken_mac_openssl
install_package "ruby-2.5.5" "https://cache.ruby-lang.org/pub/ruby/2.5/ruby-2.5.5.tar.bz2#1f2567a55dad6e50911ce42fcc705cf686924b897f597cabf803d88192024dcb" patch_ruby_railsexpress warn_eol ldflags_dirs enable_shared standard verify_openssl
