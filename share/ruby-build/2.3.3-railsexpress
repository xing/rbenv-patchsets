build_package_patch_ruby_railsexpress() {
  fetch_git rvm-patchsets git://github.com/skaes/rvm-patchsets.git master
  while IFS= read -r patch; do
    patch -p1 < "rvm-patchsets/patches/ruby/2.3.3/$patch"
  done < "rvm-patchsets/patchsets/ruby/2.3.3/railsexpress"
}

install_package "openssl-1.0.2u" "https://www.openssl.org/source/openssl-1.0.2u.tar.gz#ecd0c6ffb493dd06707d38b14bb4d8c2288bb7033735606569d8f90f89669d16" mac_openssl --if has_broken_mac_openssl
install_package "ruby-2.3.3" "https://cache.ruby-lang.org/pub/ruby/2.3/ruby-2.3.3.tar.bz2#882e6146ed26c6e78c02342835f5d46b86de95f0dc4e16543294bc656594cc5b" patch_ruby_railsexpress warn_eol ldflags_dirs standard verify_openssl
